{
  "name": "prpgen",
  "version": "0.1.12",
  "private": true,
  "description": "PRPGen - Product Requirement Prompt and Template Manager",
  "author": {
    "name": "PRPGen Team",
    "email": "contact@prpgen-dev.com"
  },
  "license": "MIT",
  "engines": {
    "node": ">=22.14.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "pnpm tauri dev",
    "dev:frontend": "pnpm run --filter frontend dev:tauri",
    "build": "pnpm build:frontend && pnpm tauri build",
    "build:frontend": "pnpm run --filter frontend build",
    "preview": "pnpm run --filter frontend preview",
    "lint": "pnpm run -r lint",
    "typecheck": "pnpm run -r typecheck",
    "setup": "pnpm install",
    "test": "pnpm test:unit",
    "test:unit": "vitest",
    "test:unit:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "tauri:icon": "tauri icon"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.5.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@vitest/coverage-v8": "^2.1.8",
    "jsdom": "^25.0.1",
    "vitest": "^2.1.8"
  },
  "packageManager": "pnpm@10.13.1"
}